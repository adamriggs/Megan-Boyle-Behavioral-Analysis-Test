// com.app.view.View// Adam Riggs//package com.app.view {	import com.adam.events.MuleEvent;	import com.adam.utils.AppData;		import flash.display.Sprite;	import flash.events.*;		public class View extends Sprite{				//vars				//objects		private var appData:AppData=AppData.instance;		public var currentTestStateView:CurrentTestStateView;		public var currentTestDataView:CurrentTestDataView;		public var historicalDataView:HistoricalDataView;				//const		public const NAME:String="view";		public const RETURNTYPE:String=NAME;				/** Storage for the singleton instance. */		private static const _instance:View = new View(ViewLock);				public function View(lock:Class){			// Verify that the lock is the correct class reference.			if (lock != ViewLock)			{				throw new Error("Invalid View access.  Use View.instance instead.");			} else {				//init();			}		}		//*****Initialization Routines				public function init():void{			debug("init()");						initVars();			initEvents();			initObjs();		}				private function initVars():void{					}				private function initEvents():void{			appData.eventManager.listen(NAME, onView);			appData.eventManager.listen("sql", onSQL);		}				private function initObjs():void{			currentTestStateView=new CurrentTestStateView();			currentTestStateView.x=appData.ctsvX;			currentTestStateView.y=appData.ctsvY;			addChild(currentTestStateView);						currentTestDataView=new CurrentTestDataView();			currentTestDataView.x=appData.ctdvX;			currentTestDataView.y=appData.ctdvY;			addChild(currentTestDataView);						historicalDataView=new HistoricalDataView();			historicalDataView.x=20;			historicalDataView.y=240;			addChild(historicalDataView);		}		//*****Core Functionality						public function startData():void{			//debug("startData()");			currentTestStateView.startData();			currentTestDataView.startData();		}				public function stopData():void{			//debug("stopData()");			currentTestStateView.stopData();			currentTestDataView.stopData();		}		//*****Event Handlers				private function onSQL(e:MuleEvent):void{			/*debug("onSQL()");			debug("e.data.sender=="+e.data.sender);			debug("e.data.type=="+e.data.type);*/			switch(e.data.type){								case RETURNTYPE:									break;							}		}				private function onView(e:MuleEvent):void{			/*debug("onView()");			debug("e.data.sender=="+e.data.sender);			debug("e.data.type=="+e.data.type);*/			switch(e.data.type){								case "startData":					startData();				break;								case "stopData":					stopData();				break;							}		}				//*****Gets and Sets				public static function get instance():View{return _instance;}		//*****Utility Functions				//**visibility		public function show():void{			this.visible = true;		}				public function hide():void{			this.visible = false;		}				//**debug		private function debug(str:String):void{			appData.debug(NAME,str);		}				}//end class}//end packageclass ViewLock{}