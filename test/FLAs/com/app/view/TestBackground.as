e function hideSprite(s:Sprite):void{			s.visible=false;		}				public function resizeMe():void{			initRects();		}//*****Event Handlers//*****Gets and Sets		//*****Utility Functions		public function show(spr:Sprite=null) {			this.visible=true;		}		public function hide() {			this.visible=false;		}				//**debug		private function debug(str:String):void{			appData.debug(NAME,str);		}	}}